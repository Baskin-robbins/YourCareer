<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com">
<select id="list" resultType= "com.mybr.myweb.dto.ComDTO">
	select id
	,title
	,writer
	,profile
	,created_at
	from com
</select>
<select id="detail" resultType="com.mybr.myweb.dto.ComDTO">
	select id
	,title
	,writer
	,content
	,created_at
	from com
	where id=#{id}
</select>
<insert id="insert" parameterType="com.mybr.myweb.dto.ComDTO" useGeneratedKeys="true" keyProperty="id">
	insert into com(title,content,writer)
	values(#{title},#{content},#{writer});
</insert>
<delete id="delete">
	delete from com
	where id=#{id}
</delete>
</mapper>